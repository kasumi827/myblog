<hr>
<h2 class="h2">
<span class="span btn">
<%= link_to 'Add New', new_post_path, class: 'header-menu' %></span>
My post</h2>
<ul class="ul">
<% @posts.each do |post| %>
    <li>
    <%= link_to post.title, post_path(post) %>
    <span>
    <%= link_to '[Edit]', edit_post_path(post), class: 'command' %>
    <%= link_to '[x]', post_path(post), 
    method: :delete,
    class: 'command',
    data: { confirm: 'Sure?' }
    %>
    </span>
</li>
    <% end %>
</ul>